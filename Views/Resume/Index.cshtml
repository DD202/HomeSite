        </div>

        <ul class="list-unstyled">
            @foreach (var contribution in @job.Contributions)
            {

                <li>
                    <small> @contribution.Description</small>
                    @if (!string.IsNullOrWhiteSpace(@contribution.Benefit))
                    {
                        <ul>
                            <li>
                                <small>@contribution.Benefit</small>
                            </li>
                        </ul>
                    }
                </li>
            }
        </ul>
    }

</div>
