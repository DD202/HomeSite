<div class="hero-unit">
    <h3>
        Proficiencies, Training, &amp; Awards
    </h3>
    <h4>Proficiencies</h4>
    <div class="row-fluid">
        <div class="span2">
            Software
        </div>
        <div class="span10">
            @foreach (var skill in @Model.ProfessionalExperience.Skills)
            {
                if (@skill.Type.Equals("Software"))
                {
                    <span>&bull; @skill.Description</span>

                }
            }
        </div>
    </div>

    <div class="row-fluid">
        <div class="span2">
            Technology
        </div>
        <div class="span10">
            @foreach (var skill in @Model.ProfessionalExperience.Skills)
            {
                if (@skill.Type.Equals("Technology"))
                {
                    <span>&bull; @skill.Description</span>

                }
            }
        </div>
    </div>

    <div class="row-fluid">

        <div class="span2">
           Languages
        </div>
        <div class="span10">
            @foreach (var skill in @Model.ProfessionalExperience.Skills)
            {
                if (@skill.Type.Equals("Language"))
                {
                    <span>&bull; @skill.Description</span>

                }
            }
        </div>
    </div>
    <h4>Training</h4>
    <ul>
        @foreach (var trainingClass in @Model.ProfessionalExperience.Trainings)
        {
               <li>@trainingClass.Name - @trainingClass.Description</li>
        }
    </ul>
   

    <h4>Recognition</h4>
    <ul>
        @foreach (var award in @Model.ProfessionalExperience.Awards)
        {
            <li>@award.Description</li>

        }
    </ul>
</div>



<div class="hero-unit">
    <h3>Education</h3>
    @foreach (var college in Model.Education.Colleges)
    {
    <ul>
        <li>@college.Name</li>
        <li>Graduation Date - @college.GraduationDate</li>
        <li>Degree - @college.Degree in @college.Major</li>
        <li>Minor - @college.Minor</li>
        <li>GPA - Major:@college.MajorGpa - Cumulative:@college.CumulativeGpa</li>
    </ul>
    }

</div>